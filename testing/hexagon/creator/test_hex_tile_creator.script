local large_grids = require("hexagon.grid_maps.large")

function callback(object)
	go.set_position(vmath.vector3(400,400,0),object)
	msg.post(object, "set_tile_color", {position = vmath.vector3(0,-1,1),color = vmath.vector4(1,0,0,1)})
end

function init(self)
	msg.post("/hex_grid_creator#hex_grid_creator", "build_grid", {size = 74, map = large_grids.layout_1})
end

function on_message(self, message_id, message, sender)
	if message_id == hash("grid_object_callback") then
		callback(message.object)
	end
end