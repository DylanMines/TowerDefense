function on_message(self, message_id, message, sender)
	if message_id == hash("place_building") then
		self.placeMode = true
		print("building")
	end
end

function on_input(self, action_id, action)
	if action_id == hash("click") and action.pressed and self.placeMode == true then
		factory.create("#factory", vmath.vector3(action.x,action.y,1))
		print("placing building")
		self.placeMode = false
	end
end

